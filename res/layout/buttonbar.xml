<TabWidget xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/buttonbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/totalstab"
        android:focusable="true"
        android:background="@drawable/buttonbarbackground"
        android:text="Reports"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/white"
        android:paddingTop="7dip"
        android:paddingBottom="2dip"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_marginLeft="-3dip"
        android:layout_marginRight="-3dip"
        android:layout_width="match_parent"
        android:layout_height="64dip" />

    <TextView
        android:id="@+id/btplaylisttab"
        android:focusable="true"
        android:background="@drawable/buttonbarbackground"
        android:text="Bad Assets"
        android:textColor="@android:color/white"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:paddingTop="7dip"
        android:paddingBottom="2dip"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_marginLeft="-3dip"
        android:layout_marginRight="-3dip"
        android:layout_width="match_parent"
        android:layout_height="64dip" />
    
    <TextView
        android:id="@+id/btbluetoothtab"
        android:focusable="false"
        android:background="@drawable/buttonbarbackground"
        android:text="Archives"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/white"
        android:paddingTop="7dip"
        android:paddingBottom="2dip"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_marginLeft="-3dip"
        android:layout_marginRight="-3dip"
        android:layout_width="match_parent"
        android:layout_height="64dip" />

</TabWidget>

