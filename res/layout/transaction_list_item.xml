<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dip"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/priceTextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="3dp"
        android:text="$69.99" />

    <TextView
        android:id="@+id/dateTextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/priceTextview"
        android:layout_alignBottom="@+id/priceTextview"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="10dp"
        android:text="Nov 6, 2014" />

    <TextView
        android:id="@+id/storeTextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/dateTextview"
        android:layout_alignBottom="@+id/dateTextview"
        android:layout_toRightOf="@+id/dateTextview"
        android:text="Apple inc" />

</RelativeLayout>
